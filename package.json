{
  "name": "butterfly",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rimraf packages/**/dist",
    "prebuild": "node scripts/strip-json.js",
    "proto:copy": "npx ts-node --transpile-only scripts/proto-copy.ts",

    "build:game:tsc": "tsc -p packages/game-server/tsconfig.app.json",
    "build:game:wp": "prebuild && nest build game-server --webpack --webpackPath packages/game-server/webpack.config.ts && pnpm run proto:copy game-server",
    "build:rt": "pnpm run prebuild && nest build realtime-server && pnpm run proto:copy realtime-server",
    "build:admin": "pnpm --filter admin-site build",
    
    "start:game": "pnpm run prebuild && nest start game-server --debug --watch",
    "start:rt": "pnpm run prebuild && pnpm run proto:copy realtime-server && nest start realtime-server --debug 9230 --watch",
    "start:admin": "pnpm --filter admin-site dev",
    "start:admin:prod": "pnpm --filter admin-site start",
    
    "migration:run:game": "npx typeorm-ts-node-commonjs migration:run -d packages/game-server/src/datasource/db/data-source.ts",
    "migration:gen:game": "npx typeorm-ts-node-commonjs migration:generate -d packages/game-server/src/datasource/db/data-source.ts packages/game-server/src/db/migrations/m",
    "migration:init:game": "typeorm migration:create packages/game-server/src/datasource/db/migrsations/migration",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./packages/game-server/test/jest-e2e.json",
    "test:client": "jest --config ./packages/game-server/test/jest-client.json",

    "format": "prettier --write \"packages/**/*.ts\"",
    "lint": "eslint \"{src,packages,test}/**/*.ts\" --fix",

    "gen:module": "node scripts/gen-module.js",
    "gen:proto": "node scripts/proto-gen.js"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/microservices": "^11.1.3",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-socket.io": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "fs-extra": "^11.1.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "3.6.5",
    "redis": "^5.5.6",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "strip-json-comments": "^5.0.3",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.25",
    "ulid": "^3.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@grpc/proto-loader": "^0.7.15",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.7",
    "@types/redis": "^4.0.11",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.18.1",
    "copy-webpack-plugin": "^13.0.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "socket.io-client": "^4.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "tslib": "^2.8.1",
    "typeorm": "0.3.x",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.20.0",
    "webpack": "^5.99.9",
    "webpack-cli": "5",
    "webpack-node-externals": "^3.0.0",
    "ws": "^8.18.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/packages/"
    ]
  }
}