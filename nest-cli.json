{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/butterfly/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/butterfly/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/butterfly",
  "projects": {
    "admin-server": {
      "type": "application",
      "root": "apps/admin-server",
      "entryFile": "main",
      "sourceRoot": "apps/admin-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/admin-server/tsconfig.app.json"
      }
    },
    "butterfly": {
      "type": "application",
      "root": "apps/butterfly",
      "entryFile": "main",
      "sourceRoot": "apps/butterfly/src",
      "compilerOptions": {
        "tsConfigPath": "apps/butterfly/tsconfig.app.json"
      }
    },
    "chat-server": {
      "type": "application",
      "root": "apps/chat-server",
      "entryFile": "main",
      "sourceRoot": "apps/chat-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/chat-server/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "game-server": {
      "type": "application",
      "root": "apps/game-server",
      "entryFile": "main",
      "sourceRoot": "apps/game-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/game-server/tsconfig.app.json"
      }
    }
  }
}