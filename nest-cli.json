{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin",
        "options": {
          "classValidatorShim": true
        }
      }
    ]
  },
  "projects": {
    "game-server": {
      "type": "application",
      "root": "packages/game-server",
      "entryFile": "main",
      "sourceRoot": "packages/game-server/src",
      "compilerOptions": {
        "tsConfigPath": "packages/game-server/tsconfig.app.json",
        "webpack": false,
        "deleteOutDir": true,
        "assets": [
          {
            "include": "packages/game-server/src/grpc/proto",
            "outDir": "packages/game-server/dist/grpc/proto"
          }
        ],
        "watchAssets": true
      }
    },
    "realtime-server": {
      "type": "application",
      "root": "packages/realtime-server",
      "entryFile": "main",
      "sourceRoot": "packages/realtime-server/src",
      "compilerOptions": {
        "tsConfigPath": "packages/realtime-server/tsconfig.app.json",
        "webpack": false,
        "webpackPath": "packages/realtime-server/webpack.config.js",
        "deleteOutDir": false,
        "assets": [
          {
            "include": "src/grpc/proto/**/*.proto",
            "outDir": "dist/grpc/proto"
          }
        ],
        "watchAssets": true
      }
    }
  }
}